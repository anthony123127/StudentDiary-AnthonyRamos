@model StudentDiary.Services.DTOs.DiaryEntryDto

@{
    ViewData["Title"] = "Delete Entry";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning:</strong> This action cannot be undone. Your diary entry will be permanently deleted.
                </div>
                
                <h5>Are you sure you want to delete this diary entry?</h5>
                
                <div class="mt-3 p-3 bg-light rounded">
                    <h6 class="text-primary">@Model.Title</h6>
                    <div class="text-muted small mb-2">
                        Created: @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' HH:mm")
                    </div>
                    <div class="content-preview">
                        @{
                            string preview = Model.Content.Length > 200 ? Model.Content.Substring(0, 200) + "..." : Model.Content;
                        }
                        @Html.Raw(preview)
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Entry
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .content-preview {
        max-height: 200px;
        overflow: hidden;
        font-size: 0.9rem;
    }
    .content-preview img {
        max-width: 100%;
        height: auto;
    }
</style>
