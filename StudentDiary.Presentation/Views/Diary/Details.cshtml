@model StudentDiary.Services.DTOs.DiaryEntryDto

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.Title</h3>
                    <small class="text-muted">
                        Created: @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' HH:mm")
                        @if (Model.LastModifiedDate != Model.CreatedDate)
                        {
                            <span> â€¢ Modified: @Model.LastModifiedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                        }
                    </small>
                </div>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="content">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Diary
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .content {
        line-height: 1.6;
        font-size: 1.1rem;
    }
    .content img {
        max-width: 100%;
        height: auto;
    }
</style>
