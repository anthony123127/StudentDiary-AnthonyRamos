@model IEnumerable<StudentDiary.Services.DTOs.DiaryEntryDto>

@{
    ViewData["Title"] = "My Diary";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Diary</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Entry
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var entry in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-start">
                        <h6 class="card-title mb-0">@entry.Title</h6>
                        <small class="text-muted">@entry.CreatedDate.ToString("MMM dd")</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @Html.Raw(entry.Content.Length > 150 ? entry.Content.Substring(0, 150) + "..." : entry.Content)
                        </p>
                        <div class="text-muted small">
                            @if (entry.LastModifiedDate != entry.CreatedDate)
                            {
                                <span>Modified: @entry.LastModifiedDate.ToString("MMM dd, yyyy")</span>
                            }
                            else
                            {
                                <span>Created: @entry.CreatedDate.ToString("MMM dd, yyyy")</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-primary">Read</a>
                            <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="fas fa-book-open fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted">No diary entries yet</h4>
        <p class="text-muted">Start your journey by creating your first diary entry.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create First Entry
        </a>
    </div>
}
